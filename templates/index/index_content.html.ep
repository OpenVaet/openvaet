                ["Vaccins Communs",            <%=$allOthersTotalCases%>,       "#4a8bbd"]

            % }
        ]);

        var viewAdvEffects = new google.visualization.DataView(dataAdvEffects);
        viewAdvEffects.setColumns(
            [
                0, 1,
                {
                    calc: "stringify",
                    sourceColumn: 1,
                    type: "string",
                    role: "annotation"
                },
                2
            ]
        );

