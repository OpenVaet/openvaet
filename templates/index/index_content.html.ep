        let fromAge             = $('#fromAge').val();
        let toAge               = $('#toAge').val();
        let fromYear            = $('#fromYear').val();
        let toYear              = $('#toYear').val();
        let request = $.ajax({
            url: "/index/events_by_substances",
            type: "POST",
